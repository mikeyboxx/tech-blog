{{#each posts}}
<section class="card">
  <header class="card-header">

    <div class="card-header-title is-flex  is-justify-content-space-between">
      <div class="is-flex is-flex-direction-column is-align-items-start">
        <p class="post-title">
          {{title}}
        </p>
        <p>
          @{{user.username}} -- {{formatDate createdAt}}
        </p> 
      </div>
      <div class="is-flex  ">
        {{#if ../loggedIn}}
          <div>
            <a class="blog-title-link js-modal-trigger" data-target="new-comment{{@index}}">Add a comment</a>
          </div>
          {{#if (isEqual user.username ../loggedInUsername)}}
            <div>
              <a class="blog-title-link delete-link delete{{@index}}" post-id="{{id}}">Delete Post</a>
            </div>
          {{/if}}
        {{/if}}
      </div>
    </div>

  </header>
  <section class="card-content">
    <p class="content">
      {{content}}
    </p>
    <hr>
    {{#each comments }}
      <div class="comment-content">
          <span >
            {{content}}
          </span>
          <div>
            <p class="comment-creator" style="font-weight:bolder;" >@{{user.username}} -- {{formatDate createdAt}}</p>
          </div>
      </div>
    {{/each}}
  </section>
</section>


<div id="new-comment{{@index}}" post-id={{id}} class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
      <header class="modal-card-head commentz">
        <p class="modal-card-title" style="color:white; text-align: center; font-weight:bold;">Comment</p>
        <button class="delete" aria-label="close"></button>
      </header>
      <section class="modal-card-body commentz">
        <textarea class="textarea" placeholder="10 lines of textarea" rows="10" id="newcomment-text{{@index}}"></textarea>
      </section>
      <footer class="modal-card-foot commentz">
        <a class="is-success submit-btn btn" id="newcomment-submit">Add Comment</a>
      </footer>
    </div>
</div>
{{/each}}